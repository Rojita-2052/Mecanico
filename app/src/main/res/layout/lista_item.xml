<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtv_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:text="Color"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtv_fecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:text="Fecha"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txtv_kilometraje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Kilometraje"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <TextView
            android:id="@+id/txtv_marca"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:text="Marca" />
        <TextView
            android:id="@+id/txtv_motivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Motivo" />
        <TextView
            android:id="@+id/txtv_nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Nombre" />
        <TextView
            android:id="@+id/txtv_rut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Rut" />
        <TextView
            android:id="@+id/txtv_patente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:text="Patente" />
    </LinearLayout>
</androidx.cardview.widget.CardView>